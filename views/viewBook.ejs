<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bookshelf</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">

  <div class="p-6">
    <h1 class="text-4xl font-semibold text-center text-amber-200 drop-shadow mb-10 tracking-wide">
      ðŸ“š Bookshelf
    </h1>

    <!-- Books Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-8 px-6">
      <% bookArr.map((book)=>{ %>
      <div class="relative flex items-stretch book cursor-pointer shadow">
        <!-- Book Spine -->
        <div class="w-6 bg-gradient-to-b from-amber-800 to-amber-900 rounded-l-xl shadow-lg border-r border-amber-900"></div>
        <div class="bg-gradient-to-br from-amber-200 via-amber-100 to-amber-50 rounded-r-xl shadow-xl p-1 border border-amber-300">
          <div class="bg-white rounded-xl shadow-inner border border-amber-100 p-4 w-40 h-64 flex flex-col justify-between">
            <div>
              <h2 class="text-lg capitalize text-amber-900 mb-2 font-bold leading-tight">
                <%= book.bookName %>
              </h2>
              <p class="text-sm text-slate-700 font-semibold capitalize">
                <%= book.authorName %>
              </p>
              <p class="text-xs text-gray-600 capitalize">
                <%= book.genre %>
              </p>
              <p class="text-xs text-blue-700 capitalize">
                <%= book.language %>
              </p>

              <!-- Tags -->
              <% if (book.bestSeller) { %>
              <span class="mt-2 inline-block px-2 py-1 bg-amber-200 text-amber-800 rounded-full text-xs">
                Best Seller
              </span>
              <% } %>
              <% if (book.newArrival) { %>
              <span class="mt-2 inline-block px-2 py-1 bg-green-200 text-green-800 rounded-full text-xs">
                New Arrival
              </span>
              <% } %>
            </div>

            <!-- Buttons -->
            <div class="flex justify-between mt-3">

              <!-- Edit Button -->
              <a href="/edit/<%= book._id %>" class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white text-xs rounded-lg shadow">
                Edit
              </a>

              <!-- Delete Button -->
              <a href="/delete/<%= book._id %>" class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white text-xs rounded-lg shadow" onclick="return confirm('Are you sure you want to delete this book?')">
                Delete
              </a>

            </div>

          </div>
        </div>
      </div>
      <% }) %>

    </div>

    <div class="mt-10 flex justify-center">
      <a href="/" class="px-6 py-3 rounded-full bg-amber-600 hover:bg-amber-700 text-white font-medium shadow-lg transition">
        â¬… Back
      </a>
    </div>

  </div>

</body>

</html>